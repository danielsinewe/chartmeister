{
  "name": "chartmeister",
  "version": "6.0.0",
  "description": "Chartmeister schema v6, examples, and lightweight utilities (validate, types) - includes font size overrides for typography harmonization",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "chartmeister-schema.json",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "chart",
    "waterfall",
    "data-visualization",
    "json-schema",
    "chartmeister",
    "chart-format",
    "data-format"
  ],
  "author": "Daniel Sinewe <daniel@chartmeister.ai>",
  "homepage": "https://chartmeister.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielsinewe/chartmeister.git"
  },
  "bugs": {
    "url": "https://github.com/danielsinewe/chartmeister/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/danielsinewe"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./chartmeister-schema.json": "./chartmeister-schema.json",
    "./examples/*": "./examples/*"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --sourcemap",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "tsup": "^8.0.1",
    "typescript": "^5.4.0"
  }
}
