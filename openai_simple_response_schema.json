{
  "name": "chartmeister_simple_response",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "chartmeister_file": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "const": "chartmeister"
          },
          "version": {
            "type": "integer",
            "minimum": 1
          },
          "source": {
            "type": "string",
            "const": "chartmeister-app"
          },
          "elements": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "type", "x", "y", "width", "height", "strokeColor", "backgroundColor", "strokeWidth", "locked", "chartData"],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9_-]+$"
                },
                "type": {
                  "type": "string",
                  "enum": ["bar"]
                },
                "x": {
                  "type": "number",
                  "minimum": 0
                },
                "y": {
                  "type": "number",
                  "minimum": 0
                },
                "width": {
                  "type": "number",
                  "minimum": 0
                },
                "height": {
                  "type": "number",
                  "minimum": 0
                },
                "strokeColor": {
                  "type": "string"
                },
                "backgroundColor": {
                  "type": "string"
                },
                "strokeWidth": {
                  "type": "number",
                  "minimum": 0
                },
                "locked": {
                  "type": "boolean"
                },
                "chartData": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string"
                    },
                    "value": {
                      "type": "number",
                      "minimum": 0
                    },
                    "type": {
                      "type": "string",
                      "enum": ["total", "change", "start", "positive", "negative", "grouped"]
                    },
                    "cumulative": {
                      "type": "number",
                      "minimum": 0
                    },
                    "editable": {
                      "type": "boolean"
                    },
                    "showValueLabel": {
                      "type": "boolean"
                    },
                    "showCategoryLabel": {
                      "type": "boolean"
                    },
                    "color": {
                      "type": "string"
                    },
                    "segments": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "label": {
                            "type": "string"
                          },
                          "value": {
                            "type": "number"
                          },
                          "color": {
                            "type": "string"
                          }
                        },
                        "required": ["label", "value", "color"],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": [
                    "label",
                    "value",
                    "type",
                    "cumulative",
                    "editable",
                    "showValueLabel",
                    "showCategoryLabel",
                    "color",
                    "segments"
                  ],
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "appState": {
            "type": "object",
            "properties": {
              "viewBackgroundColor": {
                "type": "string"
              },
              "theme": {
                "type": "string",
                "enum": ["light", "dark"]
              },
              "chartVisual": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "subtitle": {
                    "type": "string"
                  },
                  "showTitle": {
                    "type": "boolean"
                  },
                  "showSubtitle": {
                    "type": "boolean"
                  },
                  "showLegend": {
                    "type": "boolean"
                  },
                  "showYAxis": {
                    "type": "boolean"
                  },
                  "showXAxis": {
                    "type": "boolean"
                  },
                  "titleAlignment": {
                    "type": "string",
                    "enum": ["left", "center", "right", "justify"]
                  },
                  "legendLayout": {
                    "type": "string",
                    "enum": ["horizontal", "vertical"]
                  },
                  "yAxis": {
                    "type": "object",
                    "properties": {
                      "visible": {
                        "type": "boolean"
                      },
                      "minValue": {
                        "type": "number"
                      },
                      "maxValue": {
                        "type": "number"
                      },
                      "tickInterval": {
                        "type": "number",
                        "minimum": 0
                      },
                      "title": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "layout": {
                    "type": "object",
                    "properties": {
                      "barWidth": {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 200
                      },
                      "barSpacing": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                      },
                      "chartWidth": {
                        "type": "number",
                        "minimum": 100,
                        "maximum": 4000
                      },
                      "chartHeight": {
                        "type": "number",
                        "minimum": 100,
                        "maximum": 4000
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "files": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["type", "version", "source", "elements", "appState", "files"],
        "additionalProperties": false
      }
    },
    "additionalProperties": false,
    "required": ["chartmeister_file"]
  }
}